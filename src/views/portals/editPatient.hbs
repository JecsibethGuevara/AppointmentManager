    <div class="container py-3 d-flex h-100">
        <aside class="aside p-5 mt-2 mb-5 d-flex flex-column justify-content-center">
            <ul>
                <li><a class="text-start mb-3" href="/Home"><img src="/resources/icons/home.svg" alt=""> Home</a></li>
    
                <li><a class="text-start mb-3" href="/nuevoPaciente"><img src="/resources/icons/user-plus.svg" alt=""> Nuevo Paciente</a></li>
           
                <li><a class="text-start mb-3" href="/Pacientes/1"><img src="/resources/icons/users.svg" alt=""> Pacientes </a></li>
                
                <li><a class="text-start mb-3" href="/citas/1"><img src="/resources/icons/list.svg" alt=""> Citas</a></li>
                
                <li><a class="text-start mb-3" href="/logout"><img src="/resources/icons/log-out.svg" alt=""> Log out</a></li>
            </ul>
        </aside>
        <div class="container pb-4 contentContainers">
            <div class="header mt-5 p-3 d-flex">
                <a href="/Home"><img width="50px" src="/resources/icons/chevrons-left.svg" alt=""></a>
                <h1>Nuevo Paciente</h1>
            </div>
            <div class="alertDiv"></div>
             {{#each rows}}
            <form class="mt-5 px-5" action="/editPaciente/{{cedula}}" id="newPacient" method="post">
                <div class="tab" id="PersonalInfo">
                    
                    <div class="form-floating mb-2 pt-2">
                        <input type="text" class="form-control " id="namelia" name="nombre" value="{{nombre}}"
                            placeholder="name@example.com">
                        <label for="floatingInput">Nombres </label>
                    </div>

                    <div class="form-floating mb-2 pt-2">
                        <input type="text" class="form-control " id="apellido" name="apellido" value="{{apellido}}"
                            placeholder="name@example.com">
                        <label for="floatingInput">Apellidos</label>
                    </div>

                    <div class="form-floating mb-2 pt-2">
                        <input type="number" class="form-control " id="edad" name="edad" value="{{edad}}"
                            placeholder="name@example.com">
                        <label for="floatingInput">Edad</label>
                    </div>

                    <div class="form-floating mb-2 pt-2">
                        <input type="date" class="form-control " id="fecha" name="fecha" value="{{fechaNac}}"
                            placeholder="name@example.com">
                        <label for="floatingInput">Fecha de Nacimiento</label>
                    </div>

                    <div class="form-floating mb-2 pt-2">
                        <input type="text" class="form-control " id="sexo" name="sexo" list="listasexo" value="{{sexo}}">
                        <label for="floatingInput">Sexo</label>
                    </div>

                    <datalist id="listasexo">
                        <option value="Masculino"></option>
                        <option value="Femenino"></option>
                        <option value="Otro"></option> 
                    </datalist>

                    <div class="form-floating mb-2 pt-2">
                        <input type="text" class="form-control " id="edocivil" name="estadoCivil" value="{{estadoCivil}}"
                            placeholder="name@example.com">
                        <label for="floatingInput">Estado Civil</label>
                    </div>

                    <div class="form-floating mb-2 pt-2">
                        <input type="text" class="form-control " id="ocupacion" name="ocupacion" value="{{ocupacion}}"
                            placeholder="name@example.com">
                        <label for="floatingInput">Ocupacion</label>
                    </div>
                        
                </div>


                <div class="tab" id="AntecedentesMedicos" >

                    <div class="form-floating mb-2 pt-2">
                        <input type="text" class="form-control " id="floatingInput nombre" name="telefono"  value="{{telefono}}"
                            placeholder="name@example.com">
                        <label for="floatingInput">Telefono</label>
                    </div>

                    <div class="form-floating mb-2 pt-2">
                        <input type="text" class="form-control " id="floatingInput nombre" name="direccion" value="{{direccion}}"
                            placeholder="name@example.com">
                        <label for="floatingInput">Direccion</label>
                    </div>

                    <div class="form-floating mb-2 pt-2">
                        <input type="text" class="form-control " id="floatingInput nombre" name="direccionOficina" value="{{direccionOficina}}"
                            placeholder="name@example.com">
                        <label for="floatingInput">Direccion Oficina</label>
                    </div>
                    <div class="form-floating mb-2 pt-2">
                        <input type="text" class="form-control " id="floatingInput nombre" name="telefonoOficina" value="{{telefonoOficina}}"
                            placeholder="name@example.com">
                        <label for="floatingInput">Telefono Oficina</label>
                    </div>

                    <div class="form-floating mb-2 pt-2">
                        <input type="text" class="form-control " id="floatingInput nombre" name="email" value="{{email}}"
                            placeholder="name@example.com"> 
                        <label for="floatingInput">Email</label>
                    </div>

                    <div class="form-floating mb-2 pt-2">
                        <input type="text" class="form-control " id="floatingInput nombre" name="seguro" value="{{seguro}}"
                            placeholder="name@example.com">
                        <label for="floatingInput">Seguro</label>
                    </div>

                    <div class="form-floating mb-2 pt-2">
                        <input type="text" class="form-control " id="floatingInput nombre" name="representante" value = '{{representante}}'
                            placeholder="name@example.com">
                        <label for="floatingInput">Representante</label>
                    </div>

                </div>



                <div class="tab" id="AntecedentesMedicos">

                    

                
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Antecedentes</label>
                        <textarea class="form-control" id="patologias" rows="3" name="patologias">{{patologias}}</textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Motivo de Consulta</label>
                        <textarea class="form-control" id="motivoConsulta" rows="3" name="motivoConsulta">{{motivoConsulta}}</textarea>
                    </div>

                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Observaciones</label>
                        <textarea class="form-control" id="Observaciones" rows="3" name="Observaciones"></textarea>
                    </div>

                </div>
                
                <div style="overflow: auto;">
                    <div style="float: right;">
                        <button class="btn btn-primary" id="prevBtn" onclick="nextPrev(-1)" type="button">Anterior</button>
                        <button class="btn btn-success" id="nextBtn" onclick="nextPrev(1)" type="button">Siguiente</button>
                    </div>
                </div>
            </form>
            {{/each}}
        </div>
    </div>
</section>


<script src="/js/pagination.js"></script>
